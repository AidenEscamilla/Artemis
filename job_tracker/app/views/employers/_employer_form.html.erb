<%= form_with(model: employer_form, url: employers_url) do |form| %>
  <% if @employer_form.errors.any? %>
    <div style="color: red">
      <ul>
        <% @employer_form.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :phone_number, style: "display: block" %>
    <%= form.text_field :phone_number %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.fields :address, model: OpenStruct.new(employer_form.address) do |field| %>
      <%= field.label :street, style: "display: block" %>
      <%= field.text_field :street %> <br>

      <%= field.label :city, style: "display: block" %>
      <%= field.text_field :city %> <br>

      <%= field.label :state, style: "display: block" %>
      <%= field.text_field :state %> <br>

      <%= field.label :zip, style: "display: block" %>
      <%= field.text_field :zip %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
